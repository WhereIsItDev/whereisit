{
  "manifest_version": 2,
  "name": "Where is it?",
  "version": "0.0.1",

  "description": "Whereisit is an extension that helps you to easily find the references on repositories in an online fashion.",
  "icons":{"128":"logo128.png","19":"logo19.png","16":"logo16.png"},

  "browser_action": {
    "default_icon": "logo19.png",
    "default_popup": "find.html"
  },

  "background": {
    "scripts": ["jquery-2.1.4.js", "shared.js", "find.js"]
  },

  "content_scripts":[
    {
      "matches":["*://github.com/*"],
      "js":[
        "shared.js",
        "injected.js",
        "innerFind.js",
        "jquery-2.1.4.js"],
        "run_at": "document_end"
    }
  ],
  "homepage_url": "http://whereisit.io",
  "permissions": [
    "contextMenus",
    "activeTab",
    "*://github.com/*",
    "https://ajax.googleapis.com/",
    "http://localhost/",
    "http://45.33.82.241/"
  ]
}
